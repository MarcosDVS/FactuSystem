@inherits LayoutComponentBase
@using System.Security.Claims

<PageTitle>Yoja's Drinks & Heladería Los Paso</PageTitle>

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar d-print-none">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main>
        <AuthorizeView>
                <Authorized>
                    <div class="top-row px-4 d-print-none" style="background-color: #040505;">
                        <a class="nav-link active text-white" href="user">
                            <span class="oi oi-person"></span>
                            <strong>@context.User.FindFirstValue(ClaimTypes.GivenName)</strong>
                        </a>
                        <a href="about" class="d-print-none text-white">
                            <span class="oi oi-info"></span>
                            About
                        </a>
                    </div>
                </Authorized>
            </AuthorizeView>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
